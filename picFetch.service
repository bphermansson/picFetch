[Unit]
Description=PicFetch
Wants=network.target

[Service]
Type=simple
User=patrik
Group=users
WorkingDirectory=/home/patrik

ExecStart=go run /home/patrik/picFetch/picFetch.go /home/patrik/picFetch/gdrive.go 
# Use SIGINT to stop
KillSignal=SIGINT
# Auto restart on crash
Restart=on-failure
# Tag things in the log
SyslogIdentifier=PicFetch

[Install]
WantedBy=multi-user.target

