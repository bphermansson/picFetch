[Unit]
Description=PicFetch
Wants=network.target

[Service]
Type=simple
User=patrik
Group=users

ExecStart=/usr/bin/go run /usr/local/bin/picFetch386
# Use SIGINT to stop
KillSignal=SIGINT
# Auto restart on crash
Restart=on-failure
# Tag things in the log
SyslogIdentifier=PicFetch

[Install]
WantedBy=multi-user.target

